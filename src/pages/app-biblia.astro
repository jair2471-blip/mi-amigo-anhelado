---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - Lectura Diaria">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { --primary: #1a4d2e; --accent: #d4a574; --bg: #faf8f5; --text: #1a202c; --surface: #ffffff; }
    body.dark-mode { --bg: #0a0e0d; --text: #f7fafc; --surface: #1a1f1e; --primary: #52b788; }
    body { background: var(--bg); color: var(--text); font-family: 'Crimson Text', serif; margin: 0; padding: 0; }
    .container { max-width: 700px; margin: 0 auto; padding: 20px; }
    
    /* Encabezado */
    .header { text-align: center; padding: 20px; }
    .dia-circulo { 
      width: 70px; height: 70px; border: 4px solid var(--accent); 
      border-radius: 50%; display: flex; align-items: center; 
      justify-content: center; margin: 0 auto 10px; font-weight: bold; font-size: 1.5rem;
    }

    /* Controles */
    .toolbar { 
      position: sticky; top: 10px; background: var(--surface); 
      padding: 10px; border-radius: 12px; display: flex; 
      justify-content: space-between; z-index: 100; box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      margin-bottom: 20px; border: 1px solid rgba(0,0,0,0.1);
    }
    button { background: var(--primary); color: white; border: none; padding: 8px 12px; border-radius: 6px; cursor: pointer; font-weight: bold; }

    /* Texto */
    .lectura-card { background: var(--surface); padding: 25px; border-radius: 15px; margin-bottom: 25px; border: 1px solid rgba(0,0,0,0.05); }
    .titulo-cap { font-family: 'Playfair Display'; color: var(--primary); font-size: 1.8rem; margin-bottom: 15px; border-bottom: 1px solid var(--accent); }
    .v-num { color: var(--accent); font-weight: bold; margin-right: 6px; font-size: 0.9rem; }
    .v-txt { font-size: var(--f-size, 20px); line-height: 1.7; margin-bottom: 12px; display: block; }

    /* Modal Biblioteca */
    #modalBib { position: fixed; inset: 0; background: rgba(0,0,0,0.9); display: none; place-items: center; z-index: 1000; padding: 20px; }
    .modal-box { background: var(--bg); padding: 20px; border-radius: 15px; width: 100%; max-width: 600px; max-height: 80vh; overflow-y: auto; }
    .grid-libros { display: grid; grid-template-columns: repeat(auto-fill, minmax(90px, 1fr)); gap: 8px; margin-top: 15px; }
    .btn-lib { background: var(--surface); color: var(--text); border: 1px solid var(--accent); font-size: 0.75rem; padding: 8px 4px; }
  </style>

  <div class="container">
    <div class="header">
      <div class="dia-circulo" id="numDia">1</div>
      <h2 style="font-family: 'Playfair Display';">Plan de Lectura 365</h2>
    </div>

    <div class="toolbar">
      <button onclick="window.abrirBiblioteca()">üìö Libros</button>
      <div style="display:flex; gap:5px;">
        <button onclick="window.zoom(2)">A+</button>
        <button onclick="window.modoNoche()">üåì</button>
      </div>
    </div>

    <div id="pantallaLectura">
      <p style="text-align:center;">Abriendo el Libro Sagrado...</p>
    </div>

    <div style="display:flex; gap:10px; margin-top:20px; padding-bottom:50px;">
      <button style="flex:1" onclick="window.navegarDia(-1)">‚óÄ Ayer</button>
      <button style="flex:1" onclick="window.irHoy()">Hoy</button>
      <button style="flex:1" onclick="window.navegarDia(1)">Ma√±ana ‚ñ∂</button>
    </div>
  </div>

  <div id="modalBib" onclick="if(event.target==this) window.cerrarBiblioteca()">
    <div class="modal-box">
      <h3 style="text-align:center">√çndice B√≠blico</h3>
      <div id="contenedorLibros" class="grid-libros"></div>
      <button onclick="window.cerrarBiblioteca()" style="width:100%; margin-top:20px; background:var(--accent)">Cerrar</button>
    </div>
  </div>

  <script is:inline>
    // 1. ESTRUCTURA SIMPLIFICADA (ID Exacto para el JSON)
    const LIBROS = [
      {n:'G√©nesis', id:'G√©nesis', c:50}, {n:'√âxodo', id:'√âxodo', c:40}, {n:'Lev√≠tico', id:'Lev√≠tico', c:27},
      {n:'N√∫meros', id:'N√∫meros', c:36}, {n:'Deuteronomio', id:'Deuteronomio', c:34}, {n:'Josu√©', id:'Josu√©', c:24},
      {n:'Jueces', id:'Jueces', c:21}, {n:'Rut', id:'Rut', c:4}, {n:'1 Samuel', id:'1 Samuel', c:31},
      {n:'2 Samuel', id:'2 Samuel', c:24}, {n:'1 Reyes', id:'1 Reyes', c:22}, {n:'2 Reyes', id:'2 Reyes', c:25},
      {n:'1 Cr√≥nicas', id:'1 Cr√≥nicas', c:29}, {n:'2 Cr√≥nicas', id:'2 Cr√≥nicas', c:36}, {n:'Esdras', id:'Esdras', c:10},
      {n:'Nehem√≠as', id:'Nehem√≠as', c:13}, {n:'Ester', id:'Ester', c:10}, {n:'Job', id:'Job', c:42},
      {n:'Salmos', id:'Salmos', c:150}, {n:'Proverbios', id:'Proverbios', c:31}, {n:'Eclesiast√©s', id:'Eclesiast√©s', c:12},
      {n:'Cantares', id:'Cantares', c:8}, {n:'Isa√≠as', id:'Isa√≠as', c:66}, {n:'Jerem√≠as', id:'Jerem√≠as', c:52},
      {n:'Lamentaciones', id:'Lamentaciones', c:5}, {n:'Ezequiel', id:'Ezequiel', c:48}, {n:'Daniel', id:'Daniel', c:12},
      {n:'Oseas', id:'Oseas', c:14}, {n:'Joel', id:'Joel', c:3}, {n:'Am√≥s', id:'Am√≥s', c:9},
      {n:'Abd√≠as', id:'Abd√≠as', c:1}, {n:'Jon√°s', id:'Jon√°s', c:4}, {n:'Miqueas', id:'Miqueas', c:7},
      {n:'Nah√∫m', id:'Nah√∫m', c:3}, {n:'Habacuc', id:'Habacuc', c:3}, {n:'Sofon√≠as', id:'Sofon√≠as', c:3},
      {n:'Hageo', id:'Hageo', c:2}, {n:'Zacar√≠as', id:'Zacar√≠as', c:14}, {n:'Malaqu√≠as', id:'Malaqu√≠as', c:4},
      {n:'Mateo', id:'Mateo', c:28}, {n:'Marcos', id:'Marcos', c:16}, {n:'Lucas', id:'Lucas', c:24},
      {n:'Juan', id:'Juan', c:21}, {n:'Hechos', id:'Hechos', c:28}, {n:'Romanos', id:'Romanos', c:16},
      {n:'1 Corintios', id:'1 Corintios', c:16}, {n:'2 Corintios', id:'2 Corintios', c:13}, {n:'G√°latas', id:'G√°latas', c:6},
      {n:'Efesios', id:'Efesios', c:6}, {n:'Filipenses', id:'Filipenses', c:4}, {n:'Colosenses', id:'Colosenses', c:4},
      {n:'1 Tesalonicenses', id:'1 Tesalonicenses', c:5}, {n:'2 Tesalonicenses', id:'2 Tesalonicenses', c:3},
      {n:'1 Timoteo', id:'1 Timoteo', c:6}, {n:'2 Timoteo', id:'2 Timoteo', c:4}, {n:'Tito', id:'Tito', c:3},
      {n:'Filem√≥n', id:'Filem√≥n', c:1}, {n:'Hebreos', id:'Hebreos', c:13}, {n:'Santiago', id:'Santiago', c:5},
      {n:'1 Pedro', id:'1 Pedro', c:5}, {n:'2 Pedro', id:'2 Pedro', c:3}, {n:'1 Juan', id:'1 Juan', c:5},
      {n:'2 Juan', id:'2 Juan', c:1}, {n:'3 Juan', id:'3 Juan', c:1}, {n:'Judas', id:'Judas', c:1},
      {n:'Apocalipsis', id:'Apocalipsis', c:22}
    ];

    let bibliaData = null;
    let fecha = new Date();
    let fontSize = 20;

    // Generar el plan de 3 cap√≠tulos por d√≠a
    let planAnual = [];
    LIBROS.forEach(lib => {
      for(let i=1; i<=lib.c; i++) planAnual.push({ n: lib.n, id: lib.id, c: i });
    });

    async function cargarApp() {
      try {
        const res = await fetch('/biblia.json');
        bibliaData = await res.json();
        renderDia();
      } catch (e) {
        document.getElementById('pantallaLectura').innerHTML = "Error: No se encontr√≥ biblia.json en la carpeta public.";
      }
    }

    function renderDia() {
      const inicioAnio = new Date(fecha.getFullYear(), 0, 0);
      const diaDelAnio = Math.floor((fecha - inicioAnio) / 86400000);
      document.getElementById('numDia').innerText = diaDelAnio;

      const inicioIdx = (diaDelAnio - 1) * 3;
      const lecturaHoy = planAnual.slice(inicioIdx, inicioIdx + 3);
      
      mostrarContenido(lecturaHoy);
    }

    function mostrarContenido(items) {
      const pantalla = document.getElementById('pantallaLectura');
      let html = "";

      items.forEach(item => {
        // Buscamos en el JSON con el ID exacto
        const libro = bibliaData[item.id] || bibliaData[item.n];
        const capitulo = libro ? libro[item.c] : null;

        if (capitulo) {
          html += `<div class="lectura-card"><h2 class="titulo-cap">${item.n} ${item.c}</h2>`;
          Object.entries(capitulo).forEach(([num, texto]) => {
            // Limpieza de /n
            const textoLimpio = texto.replace(/^\d+\/n/, '').replace(/\/n/g, '<br>');
            html += `<span class="v-txt"><span class="v-num">${num}</span>${textoLimpio}</span>`;
          });
          html += `</div>`;
        }
      });
      pantalla.innerHTML = html;
      window.scrollTo(0,0);
    }

    // Funciones de Ventana
    window.zoom = (v) => { fontSize += v; document.documentElement.style.setProperty('--f-size', fontSize + 'px'); };
    window.modoNoche = () => document.body.classList.toggle('dark-mode');
    window.navegarDia = (v) => { fecha.setDate(fecha.getDate() + v); renderDia(); };
    window.irHoy = () => { fecha = new Date(); renderDia(); };
    
    window.abrirBiblioteca = () => {
      const cont = document.getElementById('contenedorLibros');
      cont.innerHTML = LIBROS.map(l => `<button class="btn-lib" onclick="window.irALibro('${l.id}', '${l.n}')">${l.n}</button>`).join('');
      document.getElementById('modalBib').style.display = 'grid';
    };

    window.cerrarBiblioteca = () => document.getElementById('modalBib').style.display = 'none';
    
    window.irALibro = (id, n) => {
      window.cerrarBiblioteca();
      mostrarContenido([{ id, n, c: 1 }]); // Muestra el cap 1 del libro seleccionado
    };

    document.addEventListener('DOMContentLoaded', cargarApp);
  </script>
</PageLayout>
