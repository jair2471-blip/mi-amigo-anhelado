      document.getElementById('modalBiblioteca').style.display = 'none';
      cargarLectura([{ n, f, c: 1 }]);
      window.scrollTo({ top: 0, behavior: 'smooth' });
      showToast(`Leyendo ${n}`, 'üìñ');
    };

    window.cambiarDia = (d) => {
      fechaActual.setDate(fechaActual.getDate() + d);
      cargarLectura();
      window.scrollTo({ top: 0, behavior: 'smooth' });
    };

