---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - Lectura Centrada">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">

  <style is:inline>
    :root { 
      --primary: #1a4d2e; 
      --accent: #d4a574; 
      --bg: #faf8f5; 
      --text: #1a202c; 
      --surface: #ffffff; 
    }
    body.dark-mode { 
      --bg: #0a0e0d; 
      --text: #f7fafc; 
      --surface: #1a1f1e; 
      --primary: #52b788; 
    }

    body { 
      background: var(--bg); 
      color: var(--text); 
      font-family: 'Crimson Text', serif; 
      margin: 0; 
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center; /* Centra todo el contenido horizontalmente */
    }

    .container { 
      width: 100%;
      max-width: 650px; /* Ancho ideal para lectura */
      margin: 0 auto; 
      padding: 20px;
      display: flex;
      flex-direction: column;
    }
    
    .header { 
      text-align: center; 
      padding: 30px 0; 
      width: 100%;
    }

    .dia-badge { 
      background: var(--primary);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: bold;
      letter-spacing: 1px;
    }

    .toolbar { 
      position: sticky; 
      top: 15px; 
      background: var(--surface); 
      padding: 12px 20px; 
      border-radius: 50px; /* Estilo p√≠ldora */
      display: flex; 
      justify-content: space-between; 
      align-items: center;
      z-index: 100; 
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      margin-bottom: 30px;
      border: 1px solid rgba(0,0,0,0.05);
    }

    button { 
      background: var(--primary); 
      color: white; 
      border: none; 
      padding: 8px 16px; 
      border-radius: 25px; 
      cursor: pointer; 
      font-weight: 600;
      transition: all 0.2s;
    }
    button:hover { opacity: 0.9; transform: translateY(-1px); }

    .lectura-card { 
      background: var(--surface); 
      padding: 40px; /* M√°s espacio interno para que se vea elegante */
      border-radius: 20px; 
      margin-bottom: 30px; 
      border: 1px solid rgba(0,0,0,0.03);
      box-shadow: 0 4px 15px rgba(0,0,0,0.02);
      text-align: justify; /* Opcional: hace que el texto se vea como libro */
    }

    .titulo-cap { 
      font-family: 'Playfair Display', serif; 
      color: var(--primary); 
      font-size: 2.2rem; 
      margin-bottom: 25px; 
      text-align: center;
    }

    .versiculo { 
      font-size: var(--f-size, 21px); 
      line-height: 1.8; 
      margin-bottom: 15px; 
      display: block;
    }

    .v-num { 
      color: var(--accent); 
      font-weight: bold; 
      margin-right: 10px; 
      font-size: 0.8em;
      vertical-align: top;
    }

    .footer-nav {
      display: flex;
      gap: 15px;
      width: 100%;
      margin-bottom: 80px;
    }
    .btn-big { flex: 1; padding: 15px; font-size: 1rem; }
  </style>

  <div class="container">
    <div class="header">
      <span class="dia-badge">D√çA <span id="numDia">1</span></span>
      <h1 style="font-family: 'Playfair Display'; font-size: 2.5rem; margin-top: 10px;">La Biblia en 365</h1>
    </div>

    <div class="toolbar">
      <button onclick="window.irHoy()" style="background: var(--accent)">üìÖ Hoy</button>
      <div style="display:flex; gap:10px;">
        <button onclick="window.zoom(-2)">A-</button>
        <button onclick="window.zoom(2)">A+</button>
        <button onclick="window.modoNoche()">üåì</button>
      </div>
    </div>

    <div id="lector">
      </div>

    <div class="footer-nav">
      <button class="btn-big" onclick="window.navegar(-1)">‚óÄ Ayer</button>
      <button class="btn-big" onclick="window.navegar(1)">Ma√±ana ‚ñ∂</button>
    </div>
  </div>

  <script is:inline>
    // Tu lista de libros con los IDs de tu JSON
    const LIBROS = [
      {n:'G√©nesis', id:'genesis', c:50}, {n:'√âxodo', id:'exodo', c:40}, {n:'Lev√≠tico', id:'levitico', c:27},
      {n:'N√∫meros', id:'numeros', c:36}, {n:'Deuteronomio', id:'deuteronomio', c:34}, {n:'Josu√©', id:'josue', c:24},
      {n:'Jueces', id:'jueces', c:21}, {n:'Rut', id:'rut', c:4}, {n:'1 Samuel', id:'1-samuel', c:31},
      {n:'2 Samuel', id:'2-samuel', c:24}, {n:'1 Reyes', id:'1-reyes', c:22}, {n:'2 Reyes', id:'2-reyes', c:25},
      {n:'1 Cr√≥nicas', id:'1-cronicas', c:29}, {n:'2 Cr√≥nicas', id:'2-cronicas', c:36}, {n:'Esdras', id:'esdras', c:10},
      {n:'Nehem√≠as', id:'nehemias', c:13}, {n:'Ester', id:'ester', c:10}, {n:'Job', id:'job', c:42},
      {n:'Salmos', id:'salmos', c:150}, {n:'Proverbios', id:'proverbios', c:31}, {n:'Eclesiast√©s', id:'eclesiastes', c:12},
      {n:'Cantares', id:'cantares', c:8}, {n:'Isa√≠as', id:'isaias', c:66}, {n:'Jerem√≠as', id:'jeremias', c:52},
      {n:'Lamentaciones', id:'lamentaciones', c:5}, {n:'Ezequiel', id:'ezequiel', c:48}, {n:'Daniel', id:'daniel', c:12},
      {n:'Oseas', id:'oseas', c:14}, {n:'Joel', id:'joel', c:3}, {n:'Am√≥s', id:'amos', c:9},
      {n:'Abd√≠as', id:'abdias', c:1}, {n:'Jon√°s', id:'jonas', c:4}, {n:'Miqueas', id:'miqueas', c:7},
      {n:'Nah√∫m', id:'nahum', c:3}, {n:'Habacuc', id:'habacuc', c:3}, {n:'Sofon√≠as', id:'sofonias', c:3},
      {n:'Hageo', id:'hageo', c:2}, {n:'Zacar√≠as', id:'zacarias', c:14}, {n:'Malaqu√≠as', id:'malaquias', c:4},
      {n:'Mateo', id:'mateo', c:28}, {n:'Marcos', id:'marcos', c:16}, {n:'Lucas', id:'lucas', c:24},
      {n:'Juan', id:'juan', c:21}, {n:'Hechos', id:'hechos', c:28}, {n:'Romanos', id:'romanos', c:16},
      {n:'1 Corintios', id:'1-corintios', c:16}, {n:'2 Corintios', id:'2-corintios', c:13}, {n:'G√°latas', id:'galatas', c:6},
      {n:'Efesios', id:'efesios', c:6}, {n:'Filipenses', id:'filipenses', c:4}, {n:'Colosenses', id:'colosenses', c:4},
      {n:'1 Tesalonicenses', id:'1-tesalonicenses', c:5}, {n:'2 Tesalonicenses', id:'2-tesalonicenses', c:3},
      {n:'1 Timoteo', id:'1-timoteo', c:6}, {n:'2 Timoteo', id:'2-timoteo', c:4}, {n:'Tito', id:'tito', c:3},
      {n:'Filem√≥n', id:'filemon', c:1}, {n:'Hebreos', id:'hebreos', c:13}, {n:'Santiago', id:'santiago', c:5},
      {n:'1 Pedro', id:'1-pedro', c:5}, {n:'2 Pedro', id:'2-pedro', c:3}, {n:'1 Juan', id:'1-juan', c:5},
      {n:'2 Juan', id:'2-juan', c:1}, {n:'3 Juan', id:'3-juan', c:1}, {n:'Judas', id:'judas', c:1},
      {n:'Apocalipsis', id:'apocalipsis', c:22}
    ];

    let bibliaDB = null;
    let fechaActual = new Date();
    let fontSize = 21;
    let planFull = [];
    LIBROS.forEach(l => { for(let i=1; i<=l.c; i++) planFull.push({n:l.n, id:l.id, c:i}); });

    async function cargar() {
      const res = await fetch('/biblia.json');
      bibliaDB = await res.json();
      render();
    }

    function render() {
      const start = new Date(fechaActual.getFullYear(), 0, 0);
      const diff = fechaActual - start;
      const oneDay = 1000 * 60 * 60 * 24;
      const diaAnio = Math.floor(diff / oneDay);
      
      document.getElementById('numDia').innerText = diaAnio;
      
      const idx = (diaAnio - 1) * 3;
      const lecturas = planFull.slice(idx, idx + 3);
      
      let html = "";
      lecturas.forEach(it => {
        const lib = bibliaDB[it.id];
        const cap = lib ? lib[it.c] : null;
        if(cap) {
          html += `<div class="lectura-card"><h2 class="titulo-cap">${it.n} ${it.c}</h2>`;
          Object.entries(cap).forEach(([num, texto]) => {
            const limpio = texto.replace(/^\d+\/n/, '').replace(/\/n/g, '<br>');
            html += `<span class="versiculo"><span class="v-num">${num}</span>${limpio}</span>`;
          });
          html += `</div>`;
        }
      });
      document.getElementById('lector').innerHTML = html;
      window.scrollTo(0,0);
    }

    window.zoom = (n) => { fontSize += n; document.documentElement.style.setProperty('--f-size', fontSize + 'px'); };
    window.modoNoche = () => document.body.classList.toggle('dark-mode');
    window.navegar = (n) => { fechaActual.setDate(fechaActual.getDate() + n); render(); };
    window.irHoy = () => { fechaActual = new Date(); render(); };

    document.addEventListener('DOMContentLoaded', cargar);
  </script>
</PageLayout>
