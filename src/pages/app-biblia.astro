---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Biblia 365 - Mi Amigo Anhelado">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" is:inline></script>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;900&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

  <style is:inline>
    :root {
      --primary: #1a4d2e;
      --primary-light: #2d6a4f;
      --primary-dark: #0f2818;
      --accent: #d4a574;
      --accent-light: #e8c9a0;
      --accent-dark: #b8865f;
      --bg-main: #faf8f5;
      --bg-secondary: #f0ebe3;
      --surface: rgba(255, 255, 255, 0.95);
      --surface-elevated: rgba(255, 255, 255, 0.98);
      --text-main: #1a202c;
      --text-secondary: #4a5568;
      --text-muted: #718096;
      --border: rgba(212, 165, 116, 0.2);
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
      --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.12);
      --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.15);
      --shadow-xl: 0 30px 60px rgba(0, 0, 0, 0.2);
      --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    }

    body.dark-mode {
      --bg-main: #0a0e0d;
      --bg-secondary: #1a1f1e;
      --surface: rgba(30, 37, 34, 0.95);
      --surface-elevated: rgba(40, 47, 44, 0.98);
      --text-main: #f7fafc;
      --text-secondary: #e2e8f0;
      --text-muted: #a0aec0;
      --primary: #52b788;
      --primary-light: #74c69d;
      --primary-dark: #2d6a4f;
      --accent: #f4a261;
      --accent-light: #e9c46a;
      --accent-dark: #e76f51;
      --border: rgba(82, 183, 136, 0.25);
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
      --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
      --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.5);
      --shadow-xl: 0 30px 60px rgba(0, 0, 0, 0.6);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-secondary) 100%);
      background-attachment: fixed;
      color: var(--text-main);
      font-family: 'Crimson Text', Georgia, serif;
      line-height: 1.8;
      transition: all 0.4s var(--transition-smooth);
      position: relative;
      overflow-x: hidden;
    }

    /* Patr√≥n de fondo decorativo mejorado */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(circle at 20% 30%, rgba(212, 165, 116, 0.04) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(26, 77, 46, 0.04) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(212, 165, 116, 0.03) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
      opacity: 1;
      transition: opacity 0.4s;
    }

    body.dark-mode::before {
      background-image: 
        radial-gradient(circle at 20% 30%, rgba(82, 183, 136, 0.06) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(244, 162, 97, 0.06) 0%, transparent 50%);
    }

    /* Contenedor principal */
    .main-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 1.5rem;
      position: relative;
      z-index: 1;
    }

    /* Header elegante y mejorado */
    .app-header {
      text-align: center;
      margin-bottom: 2.5rem;
      animation: fadeInDown 0.8s var(--transition-smooth);
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .app-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2.5rem, 8vw, 4.5rem);
      font-weight: 900;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 50%, var(--accent) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
      position: relative;
      display: inline-block;
    }

    .app-subtitle {
      font-size: clamp(1rem, 3vw, 1.3rem);
      color: var(--text-secondary);
      font-weight: 400;
      letter-spacing: 0.3em;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    /* Progress Ring - NUEVO */
    .progress-ring {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      margin: 1.5rem 0;
    }

    .ring-container {
      position: relative;
      width: 120px;
      height: 120px;
    }

    .ring-svg {
      transform: rotate(-90deg);
    }

    .ring-bg {
      fill: none;
      stroke: var(--border);
      stroke-width: 8;
    }

    .ring-progress {
      fill: none;
      stroke: url(#gradient);
      stroke-width: 8;
      stroke-linecap: round;
      transition: stroke-dashoffset 1s var(--transition-smooth);
    }

    .ring-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
    }

    .ring-day {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary);
      font-family: 'Playfair Display', serif;
    }

    .ring-label {
      font-size: 0.75rem;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .progress-info {
      text-align: left;
    }

    .info-date {
      font-size: 1.1rem;
      color: var(--text-secondary);
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .info-stats {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .stat-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    .stat-badge {
      background: var(--accent);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 600;
    }

    /* Panel de control mejorado */
    .control-panel {
      position: sticky;
      top: 20px;
      z-index: 100;
      background: var(--surface);
      backdrop-filter: blur(20px);
      padding: 1.25rem 2rem;
      border-radius: 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
      box-shadow: var(--shadow-lg);
      border: 2px solid var(--border);
      margin-bottom: 3rem;
      animation: slideInUp 0.6s var(--transition-smooth) 0.2s backwards;
    }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .btn-tool {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: #ffffff;
      border: none;
      font-size: 0.95rem;
      cursor: pointer;
      padding: 0.75rem 1.5rem;
      border-radius: 14px;
      transition: all 0.3s var(--transition-smooth);
      display: flex;
      align-items: center;
      gap: 0.6rem;
      font-weight: 600;
      font-family: 'Crimson Text', serif;
      box-shadow: 0 4px 12px rgba(26, 77, 46, 0.3);
      position: relative;
      overflow: hidden;
    }

    .btn-tool::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.6s;
    }

    .btn-tool:hover::before {
      left: 100%;
    }

    .btn-tool:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 8px 20px rgba(26, 77, 46, 0.4);
    }

    .btn-tool:active {
      transform: translateY(-1px) scale(1);
    }

    .control-group {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }

    /* B√∫squeda r√°pida - NUEVO */
    .search-container {
      position: relative;
      width: 100%;
      max-width: 400px;
      margin-bottom: 2rem;
    }

    .search-input {
      width: 100%;
      padding: 1rem 1.5rem 1rem 3.5rem;
      border: 2px solid var(--border);
      border-radius: 20px;
      background: var(--surface);
      color: var(--text-main);
      font-family: 'Crimson Text', serif;
      font-size: 1rem;
      transition: all 0.3s var(--transition-smooth);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 4px rgba(212, 165, 116, 0.1);
    }

    .search-icon {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-muted);
      font-size: 1.25rem;
    }

    /* Acordeones majestuosos mejorados */
    .capitulo-acordeon {
      background: var(--surface);
      backdrop-filter: blur(15px);
      border-radius: 24px;
      margin-bottom: 2rem;
      border: 2px solid var(--border);
      overflow: hidden;
      box-shadow: var(--shadow-md);
      transition: all 0.4s var(--transition-smooth);
      animation: cardReveal 0.6s var(--transition-smooth) backwards;
    }

    .capitulo-acordeon:nth-child(1) { animation-delay: 0.1s; }
    .capitulo-acordeon:nth-child(2) { animation-delay: 0.2s; }
    .capitulo-acordeon:nth-child(3) { animation-delay: 0.3s; }
    .capitulo-acordeon:nth-child(4) { animation-delay: 0.4s; }
    .capitulo-acordeon:nth-child(5) { animation-delay: 0.5s; }

    @keyframes cardReveal {
      from {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .capitulo-acordeon:hover {
      box-shadow: var(--shadow-lg);
      transform: translateY(-4px);
      border-color: var(--accent);
    }

    .capitulo-acordeon[open] {
      box-shadow: var(--shadow-xl);
      border-color: var(--accent);
    }

    .header-info {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: #ffffff;
      padding: 1.75rem 2rem;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s var(--transition-smooth);
      position: relative;
      overflow: hidden;
    }

    .header-info::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
      transform: translateX(-100%);
      transition: transform 0.8s;
    }

    .header-info:hover::before {
      transform: translateX(100%);
    }

    .header-info:hover {
      background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    }

    .header-info h2 {
      margin: 0;
      font-family: 'Playfair Display', serif;
      font-size: clamp(1.3rem, 4vw, 1.8rem);
      font-weight: 700;
      color: #ffffff;
      letter-spacing: 0.02em;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .chapter-badge {
      background: rgba(255, 255, 255, 0.2);
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 600;
      font-family: 'Crimson Text', serif;
    }

    .header-info span {
      font-size: 1.5rem;
      transition: transform 0.3s var(--transition-smooth);
    }

    .capitulo-acordeon[open] .header-info span {
      transform: rotate(180deg);
    }

    /* Vers√≠culos elegantes mejorados */
    .versiculos {
      padding: 2.5rem 2rem;
      font-size: var(--font-size, 21px);
      line-height: 2;
      color: var(--text-main);
    }

    .versiculo {
      padding: 1.25rem 1.5rem;
      border-radius: 16px;
      transition: all 0.3s var(--transition-smooth);
      cursor: pointer;
      margin-bottom: 0.75rem;
      border-left: 4px solid transparent;
      position: relative;
    }

    .versiculo::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 0;
      background: linear-gradient(90deg, var(--accent), transparent);
      transition: width 0.4s var(--transition-smooth);
      border-radius: 16px 0 0 16px;
      opacity: 0.1;
    }

    .versiculo:hover::before {
      width: 100%;
    }

    .versiculo:hover {
      background: rgba(212, 165, 116, 0.08);
      border-left-color: var(--accent);
      transform: translateX(8px);
      box-shadow: var(--shadow-sm);
    }

    .versiculo.active {
      background: linear-gradient(135deg, rgba(212, 165, 116, 0.15) 0%, rgba(212, 165, 116, 0.05) 100%);
      border-left-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2), var(--shadow-md);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% {
        box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2), var(--shadow-md);
      }
      50% {
        box-shadow: 0 0 0 6px rgba(212, 165, 116, 0.3), var(--shadow-lg);
      }
    }

    .versiculo .num {
      color: var(--accent);
      font-weight: 700;
      margin-right: 1rem;
      font-size: 0.9em;
      font-family: 'Playfair Display', serif;
    }

    /* Palabras de Cristo en rojo */
    .txt b {
      color: #b91c1c;
      font-weight: 600;
    }

    body.dark-mode .txt b {
      color: #ff6b6b;
    }

    /* Estilos de resaltado mejorados */
    .sub-yellow {
      background: linear-gradient(135deg, #fff59d 0%, #ffeaa7 100%);
      color: #1a202c;
      padding: 0.3rem 0.6rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(255, 245, 157, 0.4);
      transition: all 0.3s var(--transition-smooth);
    }

    .sub-green {
      background: linear-gradient(135deg, #a5d6a7 0%, #81c784 100%);
      color: #1a202c;
      padding: 0.3rem 0.6rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(165, 214, 167, 0.4);
      transition: all 0.3s var(--transition-smooth);
    }

    .sub-blue {
      background: linear-gradient(135deg, #90caf9 0%, #64b5f6 100%);
      color: #1a202c;
      padding: 0.3rem 0.6rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(144, 202, 249, 0.4);
      transition: all 0.3s var(--transition-smooth);
    }

    /* Men√∫ de acciones flotante mejorado */
    .menu-acciones {
      position: fixed;
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%) translateY(150px);
      background: var(--surface-elevated);
      backdrop-filter: blur(30px);
      padding: 1.5rem 2rem;
      border-radius: 30px;
      box-shadow: var(--shadow-xl);
      display: flex;
      gap: 1.25rem;
      z-index: 1000;
      opacity: 0;
      pointer-events: none;
      transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      border: 2px solid var(--accent);
    }

    .menu-acciones.active {
      opacity: 1;
      pointer-events: auto;
      transform: translateX(-50%) translateY(0);
    }

    .btn-action {
      background: var(--bg-main);
      border: 2px solid var(--border);
      border-radius: 18px;
      padding: 1rem 1.25rem;
      min-width: 75px;
      cursor: pointer;
      color: var(--text-main);
      font-size: 0.8rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s var(--transition-smooth);
      font-weight: 600;
      font-family: 'Crimson Text', serif;
      position: relative;
      overflow: hidden;
    }

    .btn-action::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: var(--accent);
      transform: translate(-50%, -50%);
      transition: width 0.4s, height 0.4s;
      z-index: -1;
    }

    .btn-action:hover::before {
      width: 200px;
      height: 200px;
    }

    .btn-action span {
      font-size: 1.75rem;
      transition: transform 0.3s var(--transition-smooth);
    }

    .btn-action:hover {
      color: #1a202c;
      border-color: var(--accent);
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 8px 20px rgba(212, 165, 116, 0.4);
    }

    .btn-action:hover span {
      transform: scale(1.2);
    }

    .btn-action:active {
      transform: translateY(-3px) scale(1);
    }

    /* Navegaci√≥n mejorada */
    .nav-buttons {
      display: flex;
      gap: 1.25rem;
      margin-top: 3rem;
      margin-bottom: 2rem;
    }

    .btn-nav {
      flex: 1;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: #ffffff;
      border: none;
      padding: 1.25rem 2rem;
      border-radius: 18px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s var(--transition-smooth);
      font-family: 'Crimson Text', serif;
      letter-spacing: 0.05em;
      box-shadow: var(--shadow-md);
      position: relative;
      overflow: hidden;
    }

    .btn-nav::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-nav:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-nav:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    .btn-nav:active {
      transform: translateY(-2px);
    }

    .btn-nav.btn-today {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
      color: #1a202c;
      flex: 0 0 auto;
      min-width: 120px;
    }

    /* Modal biblioteca mejorado */
    #modalBiblioteca {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(20px);
      display: none;
      place-items: center;
      z-index: 1100;
      padding: 1.5rem;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .modal-content {
      background: var(--surface);
      width: 100%;
      max-width: 700px;
      max-height: 85vh;
      padding: 2.5rem;
      border-radius: 32px;
      border: 2px solid var(--accent);
      box-shadow: var(--shadow-xl);
      overflow-y: auto;
      animation: modalSlideIn 0.4s var(--transition-smooth);
    }

    @keyframes modalSlideIn {
      from {
        opacity: 0;
        transform: scale(0.9) translateY(30px);
      }
      to {
        opacity: 1;
        transform: scale(1) translateY(0);
      }
    }

    .modal-content h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      color: var(--primary);
      font-weight: 700;
    }

    #gridLibros {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
      gap: 1rem;
    }

    #gridLibros button {
      padding: 1.25rem 1rem;
      border: 2px solid var(--border);
      border-radius: 16px;
      background: var(--bg-main);
      color: var(--text-main);
      cursor: pointer;
      font-family: 'Crimson Text', serif;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s var(--transition-smooth);
      box-shadow: var(--shadow-sm);
      position: relative;
      overflow: hidden;
    }

    #gridLibros button::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: var(--accent);
      transform: translate(-50%, -50%);
      transition: width 0.4s, height 0.4s;
      z-index: -1;
    }

    #gridLibros button:hover::before {
      width: 200px;
      height: 200px;
    }

    #gridLibros button:hover {
      color: #1a202c;
      border-color: var(--accent);
      transform: translateY(-4px) scale(1.05);
      box-shadow: var(--shadow-md);
    }

    /* Toast notifications - NUEVO */
    .toast {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: var(--surface-elevated);
      color: var(--text-main);
      padding: 1rem 1.5rem;
      border-radius: 16px;
      box-shadow: var(--shadow-xl);
      border: 2px solid var(--accent);
      z-index: 2000;
      display: flex;
      align-items: center;
      gap: 1rem;
      opacity: 0;
      transform: translateX(400px);
      transition: all 0.4s var(--transition-smooth);
    }

    .toast.show {
      opacity: 1;
      transform: translateX(0);
    }

    .toast-icon {
      font-size: 1.5rem;
    }

    .toast-message {
      font-weight: 600;
    }

    /* Canvas helper oculto */
    #canvas-helper {
      position: fixed;
      top: -9999px;
      left: -9999px;
      width: 800px;
      padding: 80px;
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
      color: #ffffff;
      text-align: center;
      font-family: 'Playfair Display', serif;
      border: 8px solid var(--accent);
      border-radius: 20px;
    }

    /* Loading skeleton - NUEVO */
    .skeleton {
