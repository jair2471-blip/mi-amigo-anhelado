  <style>
   .hero {
      height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      
      /* Esta es una textura de papel real que se nota m√°s */
      background-color: #f4f1ea; /* Color base crema */
      background-image: url("https://www.transparenttextures.com/patterns/papyrus.png");
      
      /* Le damos un sombreado en los bordes para que parezca una hoja antigua */
      box-shadow: inset 0 0 100px rgba(0,0,0,0.05);
      
      background-attachment: fixed;
      border-bottom: 2px solid #d4a574;
    }

    .subtitle {
      color: #d4a574;
      letter-spacing: 5px;
      font-weight: bold;
      font-size: 0.9rem;
      display: block;
      margin-bottom: 1rem;
    }

   .title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(3rem, 10vw, 5rem);
      color: #1a4d2e;
      margin-bottom: 1.5rem;
      line-height: 1.1;
      /* Sombra sutil que da profundidad */
      text-shadow: 2px 2px 4px rgba(0,0,0,0.05);
    }

    .description {
      font-size: 1.25rem;
      color: #5d6d7e;
      max-width: 600px;
      margin: 0 auto 2.5rem;
      line-height: 1.6;
    }

    /* Botones */
    .hero-actions {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
    }

    .btn-primary {
      background: #1a4d2e;
      color: white;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 10px 20px rgba(26, 77, 46, 0.2);
      transition: all 0.3s;
    }

    .btn-secondary {
      background: transparent;
      color: #1a4d2e;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      border: 2px solid #1a4d2e;
      transition: all 0.3s;
    }

    .btn-primary:hover { transform: translateY(-3px); box-shadow: 0 15px 30px rgba(26, 77, 46, 0.3); }
    .btn-secondary:hover { background: #f0f4f1; }

    /* Features Section */
    .features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 3rem;
      padding: 5rem 1rem;
      border-top: 1px solid #eee;
    }

    .feature-card {
      text-align: center;
    }

    .feature-card .icon { font-size: 2.5rem; margin-bottom: 1rem; }
    .feature-card h3 { font-family: 'Playfair Display', serif; font-size: 1.5rem; color: #1a202c; margin-bottom: 1rem; }
    .feature-card p { color: #718096; line-height: 1.6; }

    /* Animaciones */
    .fade-in {
      animation: fadeIn ease 1.5s;
    }

    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 600px) {
      .hero-actions { flex-direction: column; }
      .title { font-size: 3rem; }
    }
  </style>
</PageLayout>
