---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Mi Amigo Anhelado">
  <h1>Bienvenido a Mi Amigo Anhelado</h1>
</PageLayout>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" is:inline></script>
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;900&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap"
    rel="stylesheet"
  />

  <style is:inline>
    :root {
      --primary: #1a4d2e;
      --primary-light: #2d6a4f;
      --primary-dark: #0f2818;
      --accent: #d4a574;
      --accent-light: #e8c9a0;
      --accent-dark: #b8865f;
      --bg-main: #faf8f5;
      --bg-secondary: #f0ebe3;
      --surface: rgba(255, 255, 255, 0.95);
      --surface-elevated: rgba(255, 255, 255, 0.98);
      --text-main: #1a202c;
      --text-secondary: #4a5568;
      --text-muted: #718096;
      --border: rgba(212, 165, 116, 0.2);
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
      --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.12);
      --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.15);
      --shadow-xl: 0 30px 60px rgba(0, 0, 0, 0.2);
    }

    body.dark-mode {
      --bg-main: #0a0e0d;
      --bg-secondary: #1a1f1e;
      --surface: rgba(30, 37, 34, 0.95);
      --surface-elevated: rgba(40, 47, 44, 0.98);
      --text-main: #f7fafc;
      --text-secondary: #e2e8f0;
      --text-muted: #a0aec0;
      --primary: #52b788;
      --primary-light: #74c69d;
      --primary-dark: #2d6a4f;
      --accent: #f4a261;
      --accent-light: #e9c46a;
      --accent-dark: #e76f51;
      --border: rgba(82, 183, 136, 0.25);
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
      --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
      --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.5);
      --shadow-xl: 0 30px 60px rgba(0, 0, 0, 0.6);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-secondary) 100%);
      background-attachment: fixed;
      color: var(--text-main);
      font-family: 'Crimson Text', Georgia, serif;
      line-height: 1.8;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow-x: hidden;
    }

    /* Patr√≥n de fondo decorativo */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image:
        radial-gradient(circle at 20% 30%, rgba(212, 165, 116, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(26, 77, 46, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(212, 165, 116, 0.02) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
    }

    body.dark-mode::before {
      background-image:
        radial-gradient(circle at 20% 30%, rgba(82, 183, 136, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(244, 162, 97, 0.05) 0%, transparent 50%);
    }

    /* Contenedor principal */
    .main-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 1.5rem;
      position: relative;
      z-index: 1;
    }

    /* Header elegante */
    .app-header {
      text-align: center;
      margin-bottom: 3rem;
      animation: fadeInDown 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .app-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2.5rem, 8vw, 4.5rem);
      font-weight: 900;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 50%, var(--accent) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .app-subtitle {
      font-size: clamp(1rem, 3vw, 1.3rem);
      color: var(--text-secondary);
      font-weight: 400;
      letter-spacing: 0.3em;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    #diaActual {
      font-size: clamp(0.9rem, 2.5vw, 1.1rem);
      color: var(--accent);
      font-weight: 600;
      letter-spacing: 0.1em;
    }

    /* Panel de control mejorado */
    .control-panel {
      position: sticky;
      top: 20px;
      z-index: 100;
      background: var(--surface);
      backdrop-filter: blur(20px);
      padding: 1.25rem 2rem;
      border-radius: 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
      box-shadow: var(--shadow-lg);
      border: 2px solid var(--border);
      margin-bottom: 3rem;
      animation: slideInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s backwards;
    }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .btn-tool {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      border: none;
      font-size: 0.95rem;
      cursor: pointer;
      color: #ffffff;
      padding: 0.75rem 1.5rem;
      border-radius: 14px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      font-family: 'Crimson Text', serif;
      box-shadow: 0 4px 12px rgba(26, 77, 46, 0.3);
      position: relative;
      overflow: hidden;
    }

    .btn-tool::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .btn-tool:hover::before {
      left: 100%;
    }

    .btn-tool:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(26, 77, 46, 0.4);
    }

    .btn-tool:active {
      transform: translateY(0);
    }

    .control-group {
      display: flex;
      gap: 0.75rem;
    }

    /* Acordeones majestuosos */
    .capitulo-acordeon {
      background: var(--surface);
      backdrop-filter: blur(15px);
      border-radius: 24px;
      margin-bottom: 2rem;
      border: 2px solid var(--border);
      overflow: hidden;
      box-shadow: var(--shadow-md);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      animation: cardReveal 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
    }

    .capitulo-acordeon:nth-child(1) {
      animation-delay: 0.1s;
    }
    .capitulo-acordeon:nth-child(2) {
      animation-delay: 0.2s;
    }
    .capitulo-acordeon:nth-child(3) {
      animation-delay: 0.3s;
    }
    .capitulo-acordeon:nth-child(4) {
      animation-delay: 0.4s;
    }

    @keyframes cardReveal {
      from {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .capitulo-acordeon:hover {
      box-shadow: var(--shadow-lg);
      transform: translateY(-4px);
    }

    .capitulo-acordeon[open] {
      box-shadow: var(--shadow-xl);
    }

    .header-info {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: #ffffff;
      padding: 1.75rem 2rem;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .header-info::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      transform: translateX(-100%);
      transition: transform 0.6s;
    }

    .header-info:hover::before {
      transform: translateX(100%);
    }

    .header-info:hover {
      background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
    }

    .header-info h2 {
      margin: 0;
      font-family: 'Playfair Display', serif;
      font-size: clamp(1.3rem, 4vw, 1.8rem);
      font-weight: 700;
      color: #ffffff;
      letter-spacing: 0.02em;
    }

    .header-info span {
      font-size: 1.5rem;
      transition: transform 0.3s;
    }

    .capitulo-acordeon[open] .header-info span {
      transform: rotate(180deg);
    }

    /* Vers√≠culos elegantes */
    .versiculos {
      padding: 2.5rem 2rem;
      font-size: var(--font-size, 21px);
      line-height: 2;
      color: var(--text-main);
    }

    .versiculo {
      padding: 1.25rem 1.5rem;
      border-radius: 16px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      margin-bottom: 0.75rem;
      border-left: 4px solid transparent;
      position: relative;
    }

    .versiculo::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 0;
      background: linear-gradient(90deg, var(--accent), transparent);
      transition: width 0.3s;
      border-radius: 16px 0 0 16px;
      opacity: 0.1;
    }

    .versiculo:hover::before {
      width: 100%;
    }

    .versiculo:hover {
      background: rgba(212, 165, 116, 0.08);
      border-left-color: var(--accent);
      transform: translateX(8px);
      box-shadow: var(--shadow-sm);
    }

    .versiculo.active {
      background: linear-gradient(135deg, rgba(212, 165, 116, 0.15) 0%, rgba(212, 165, 116, 0.05) 100%);
      border-left-color: var(--accent);
      box-shadow:
        0 0 0 3px rgba(212, 165, 116, 0.2),
        var(--shadow-md);
    }

    .versiculo .num {
      color: var(--accent);
      font-weight: 700;
      margin-right: 1rem;
      font-size: 0.9em;
      font-family: 'Playfair Display', serif;
    }

    /* Estilos de resaltado */
    .sub-yellow {
      background: linear-gradient(135deg, #fff59d 0%, #ffeaa7 100%);
      color: #1a202c;
      padding: 0.25rem 0.5rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(255, 245, 157, 0.4);
    }

    .sub-green {
      background: linear-gradient(135deg, #a5d6a7 0%, #81c784 100%);
      color: #1a202c;
      padding: 0.25rem 0.5rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(165, 214, 167, 0.4);
    }

    .sub-blue {
      background: linear-gradient(135deg, #90caf9 0%, #64b5f6 100%);
      color: #1a202c;
      padding: 0.25rem 0.5rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(144, 202, 249, 0.4);
    }

    /* Men√∫ de acciones flotante */
    .menu-acciones {
      position: fixed;
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%) translateY(150px);
      background: var(--surface-elevated);
      backdrop-filter: blur(30px);
      padding: 1.5rem 2rem;
      border-radius: 30px;
      box-shadow: var(--shadow-xl);
      display: flex;
      gap: 1.25rem;
      z-index: 1000;
      opacity: 0;
      pointer-events: none;
      transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      border: 2px solid var(--accent);
    }

    .menu-acciones.active {
      opacity: 1;
      pointer-events: auto;
      transform: translateX(-50%) translateY(0);
    }

    .btn-action {
      background: var(--bg-main);
      border: 2px solid var(--border);
      border-radius: 18px;
      padding: 1rem 1.25rem;
      min-width: 75px;
      cursor: pointer;
      color: var(--text-main);
      font-size: 0.8rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      font-weight: 600;
      font-family: 'Crimson Text', serif;
    }

    .btn-action span {
      font-size: 1.75rem;
    }

    .btn-action:hover {
      background: var(--accent);
      color: #1a202c;
      border-color: var(--accent);
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 8px 20px rgba(212, 165, 116, 0.4);
    }

    .btn-action:active {
      transform: translateY(-3px) scale(1);
    }

    /* Navegaci√≥n mejorada */
    .nav-buttons {
      display: flex;
      gap: 1.25rem;
      margin-top: 3rem;
      margin-bottom: 2rem;
    }

    .btn-nav {
      flex: 1;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      color: #ffffff;
      border: none;
      padding: 1.25rem 2rem;
      border-radius: 18px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      font-family: 'Crimson Text', serif;
      letter-spacing: 0.05em;
      box-shadow: var(--shadow-md);
      position: relative;
      overflow: hidden;
    }

    .btn-nav::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      transform: translate(-50%, -50%);
      transition:
        width 0.6s,
        height 0.6s;
    }

    .btn-nav:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-nav:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    .btn-nav:active {
      transform: translateY(-2px);
    }

    .btn-nav.btn-today {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
      color: #1a202c;
      flex: 0 0 auto;
      min-width: 120px;
    }

    /* Modal biblioteca */
    #modalBiblioteca {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(20px);
      display: none;
      place-items: center;
      z-index: 1100;
      padding: 1.5rem;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    .modal-content {
      background: var(--surface);
      width: 100%;
      max-width: 700px;
      max-height: 85vh;
      padding: 2.5rem;
      border-radius: 32px;
      border: 2px solid var(--accent);
      box-shadow: var(--shadow-xl);
      overflow-y: auto;
      animation: modalSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes modalSlideIn {
      from {
        opacity: 0;
        transform: scale(0.9) translateY(30px);
      }
      to {
        opacity: 1;
        transform: scale(1) translateY(0);
      }
    }

    .modal-content h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      color: var(--primary);
      font-weight: 700;
    }

    #gridLibros {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
      gap: 1rem;
    }

    #gridLibros button {
      padding: 1.25rem 1rem;
      border: 2px solid var(--border);
      border-radius: 16px;
      background: var(--bg-main);
      color: var(--text-main);
      cursor: pointer;
      font-family: 'Crimson Text', serif;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-sm);
    }

    #gridLibros button:hover {
      background: var(--accent);
      color: #1a202c;
      border-color: var(--accent);
      transform: translateY(-4px) scale(1.05);
      box-shadow: var(--shadow-md);
    }

    /* Canvas helper oculto */
    #canvas-helper {
      position: fixed;
      top: -9999px;
      left: -9999px;
      width: 800px;
      padding: 80px;
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
      color: #ffffff;
      text-align: center;
      font-family: 'Playfair Display', serif;
      border: 8px solid var(--accent);
      border-radius: 20px;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .main-container {
        padding: 1rem;
      }

      .control-panel {
        padding: 1rem 1.25rem;
        flex-direction: column;
        gap: 0.75rem;
      }

      .control-group {
        width: 100%;
        justify-content: center;
      }

      .btn-tool {
        padding: 0.65rem 1.25rem;
        font-size: 0.85rem;
      }

      .versiculos {
        padding: 1.5rem 1.25rem;
        font-size: 18px;
      }

      .versiculo {
        padding: 1rem;
      }

      .nav-buttons {
        flex-direction: column;
        gap: 1rem;
      }

      .btn-nav {
        padding: 1rem 1.5rem;
      }

      .menu-acciones {
        padding: 1.25rem 1.5rem;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
      }

      .btn-action {
        min-width: 70px;
        padding: 0.875rem 1rem;
        font-size: 0.75rem;
      }

      .modal-content {
        padding: 2rem 1.5rem;
      }

      #gridLibros {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 0.75rem;
      }
    }

    @media (max-width: 480px) {
      .app-title {
        font-size: 2.5rem;
      }

      .header-info {
        padding: 1.25rem 1.5rem;
      }

      #gridLibros {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    /* Scrollbar personalizado */
    ::-webkit-scrollbar {
      width: 12px;
    }

    ::-webkit-scrollbar-track {
      background: var(--bg-main);
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, var(--primary) 0%, var(--primary-light) 100%);
      border-radius: 10px;
      border: 2px solid var(--bg-main);
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(180deg, var(--accent) 0%, var(--accent-light) 100%);
    }
